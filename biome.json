{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "ignore": ["dist/**"],
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist/**"],
    "rules": {
      "a11y": {
        "all": true
      },
      "complexity": {
        "all": true,
        "noExcessiveCognitiveComplexity": "off",
        "noVoid": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "all": true,
        "noInvalidNewBuiltin": "off",
        "noNewSymbol": "off",
        "noNodejsModules": "off",
        "noUndeclaredVariables": "off",
        "noUnusedFunctionParameters": "off",
        "noUnusedPrivateClassMembers": "off",
        "noUnusedVariables": "off"
      },
      "nursery": {
        "all": true,
        "noNestedTernary": "off",
        "noProcessEnv": "off",
        "noRestrictedImports": "off",
        "noRestrictedTypes": "off",
        "noSecrets": "off",
        "useAtIndex": "off",
        "useConsistentMemberAccessibility": "off",
        "useExplicitType": "off",
        "useImportRestrictions": "off",
        "useSortedClasses": { "fix": "safe", "level": "error", "options": { "functions": ["tw"] } },
        "useStrictMode": "off"
      },
      "performance": {
        "all": true,
        "useTopLevelRegex": "off"
      },
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "noParameterProperties": "off",
        "noRestrictedGlobals": "off",
        "useDefaultSwitchClause": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": { "filenameCases": ["kebab-case"], "requireAscii": true }
        },
        "useNamingConvention": "off"
      },
      "suspicious": {
        "all": true,
        "noConfusingVoidType": "off",
        "noConsole": "off",
        "noConsoleLog": "off",
        "noEmptyBlockStatements": "warn",
        "noReactSpecificProps": "off",
        "noSkippedTests": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["dist/**"]
  }
}
