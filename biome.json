{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "formatter": {
    "enabled": true,
    "ignore": ["dist/**", "tsconfig.base.json", "tsconfig.json", ".vscode/**"],
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist/**"],
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": {
          "fix": "safe",
          "level": "error"
        },
        "noUnusedImports": "error",
        "useArrayLiterals": {
          "fix": "safe",
          "level": "error"
        },
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "noDoneCallback": "error",
        "noMisplacedAssertion": "error",
        "noUndeclaredDependencies": "error",
        "noUselessStringConcat": {
          "fix": "safe",
          "level": "error"
        },
        "noUselessUndefinedInitialization": "error",
        "noYodaExpression": "error",
        "useAdjacentOverloadSignatures": "error",
        "useConsistentBuiltinInstantiation": {
          "fix": "safe",
          "level": "error"
        },
        "useDateNow": {
          "fix": "safe",
          "level": "error"
        },
        "useErrorMessage": "error",
        "useExplicitLengthCheck": {
          "fix": "safe",
          "level": "error"
        },
        "useImportExtensions": "error",
        "useNumberToFixedDigitsArgument": {
          "fix": "safe",
          "level": "error"
        },
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "functions": ["tw"]
          }
        },
        "useThrowOnlyError": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noReExportAll": "error"
      },
      "recommended": true,
      "style": {
        "noDefaultExport": "error",
        "noImplicitBoolean": "error",
        "noNamespace": "error",
        "noNamespaceImport": "error",
        "noNegationElse": "error",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": {
          "fix": "safe",
          "level": "error"
        },
        "useBlockStatements": {
          "fix": "safe",
          "level": "error"
        },
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": {
          "fix": "safe",
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"],
            "requireAscii": true
          }
        },
        "useForOf": "error",
        "useFragmentSyntax": {
          "fix": "safe",
          "level": "error"
        },
        "useImportType": "error",
        "useNodeAssertStrict": "error",
        "useNodejsImportProtocol": {
          "fix": "safe",
          "level": "error"
        },
        "useShorthandArrayType": {
          "fix": "safe",
          "level": "error"
        },
        "useShorthandAssign": {
          "fix": "safe",
          "level": "error"
        },
        "useSingleCaseStatement": {
          "fix": "safe",
          "level": "error"
        }
      },
      "suspicious": {
        "noConfusingVoidType": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["dist/**"]
  }
}
